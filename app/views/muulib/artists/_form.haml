= simple_form_for artist, html: { class: 'form-horizontal' } do |f|
  .row
    .col-lg-12
      = f.input :name
  .row
    .col-lg-12
      = f.input :established
  .row
    .col-lg-12
      = f.input :country
  .row
    .col-lg-12
      = f.input :description
  .row
    .col-lg-12
      = f.association :albums, collection: Album.where(artist_id: nil || artist.id)
  .row
    .col-lg-12
      = f.submit 'Save', class: 'btn btn-default'

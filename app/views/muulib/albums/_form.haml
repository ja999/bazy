= simple_form_for album, html: { class: 'form-horizontal' } do |f|
  .row
    .col-lg-12
      = f.input :title
  .row
    .col-lg-12
      = f.input :date, as: :date, start_year: Date.today.year - 500, end_year: Date.today.year, order: [ :day, :month, :year]
  .row
    .col-lg-12
      = f.input :format
  .row
    .col-lg-12
      = f.input :description, as: :text
  .row
    .col-lg-12
      = f.input :rating
  .row
    .col-lg-12
      = f.association :genres, collection: Genre.all
  .row
    .col-lg-12
      = f.association :artist
  .row
    .col-lg-12
      = f.association :record_label
  .row
    .col-lg-12
      = f.association :songs, collection: songs_to_show
  .row
    .col-lg-12
      = f.submit 'Save', class: 'btn btn-default'

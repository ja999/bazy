= simple_form_for record_label, html: { class: 'form-horizontal' } do |f|
  .row
    .col-lg-12
      = f.input :name
  .row
    .col-lg-12
      = f.input :established, as: :date, start_year: Date.today.year - 500, end_year: Date.today.year, order: [ :day, :month, :year]
  .row
    .col-lg-12
      = f.input :description, as: :text
  .row
    .col-lg-12
      = f.association :albums, collection: albums_to_show
  .row
    .col-lg-12
      = f.submit 'Save', class: 'btn btn-default'

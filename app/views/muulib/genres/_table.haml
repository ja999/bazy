.admin.container
  .row
    .col-lg-10
      .panel.panel-default
        .panel-heading= "#{params[:controller].capitalize} index"
        .panel-body
          - genres.each do |f|
            .panel-body
              = f.name
              =link_to 'Edit', edit_genre_path(f), class: 'btn btn-default context-btn'
              =link_to 'Destroy', genre_path(f), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default context-btn'
              %hr.featurette-divider
